<%- include('partials/header') -%>

<main class="">

  <% if (messages.authenticateErr) { %>
    <div class="alert alert-error shadow-lg">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
        <span><%= messages.authenticateErr %></span>
      </div>
    </div>
<% } %>
  <!-- Hero section -->
  <div class="hero min-h-screen bg-base-200">
    
    <div class="hero-content flex-col lg:flex-row">
      <img src="/imgs/word-of-mouth-hero.png" class="max-w-sm rounded-lg shadow-2xl" />
      <div>
        <h1 class="text-5xl font-bold py-3">Welcome to Word of Mouth</h1>
        <h2 class="text-2xl font-bold py-3">Your place to exchange quality reviews with people you know.</h2>
        <p class="py-3">Join Word of Mouth for a way to exchange more honest and real reviews with people you know. Create a group with friends, families, or another close-knit community where you can exchange reviews for things like food, media, experiences, or products.</p>
        <a href="/login" class="btn btn-primary">Login</a>
        <a href="/signup" class="btn btn-primary">Sign Up</a>
      </div>
    </div>
  </div>

</main>
    

<%- include('partials/footer') -%>